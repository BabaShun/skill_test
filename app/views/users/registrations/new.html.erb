<div class="container text-center">
  <div class="user_registration_form_container">
    <div class="forms">
      <h2 class="registration_h2">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.text_field :username, autofocus: true, size: '40', placeholder: '名前' %>
        </div>
        <br>
        <div class="field">
          <%= f.email_field :email, autofocus: true, size: '40', placeholder: 'メールアドレス'  %>
        </div>
        <br>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", size: '40', placeholder: 'パスワード'  %>
        </div>
        <br>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", size: '40', placeholder: 'パスワード確認'  %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "新規登録", class: 'submit-button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>