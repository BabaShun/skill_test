<dvi class="container text-center">
  <h2 class="padding-top-50 registration_h2">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, size: '40', placeholder: 'メールアドレス' %>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password, autocomplete: "off", size: '40', placeholder: 'パスワード' %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Log in", class: 'submit-button'  %>
    </div>
  <% end %>
</dvi>